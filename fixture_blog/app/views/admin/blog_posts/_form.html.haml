- action = @blog_post.new_record? ? :create : :update

= form_for @blog_post, :url => {:action => action} do |f|
  - @blog_post.errors.full_messages.each do |msg|
    .err{:style => 'color:red'}
      = msg
  .field
    Title
    = f.text_field :title
  .field
    Publish At
    = f.datetime_select :publish_at
  .field
    Content
    = f.text_area :content
  .field
    = f.submit 'Save'
